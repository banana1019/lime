<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 
  namespace = "인터페이스의 패키지 및 이름"과 일치해야 한다.
 -->
<mapper namespace="com.lime.dao.UserDao">

  <!--  테이블의 컬럼과 객체 필드를 연결한다. -->
  <resultMap type="user" id="userMap">
    <id column="user_id" property="no"/>
    <result column="email" property="email"/>
    <result column="name" property="name"/>
    <result column="phone_no" property="phoneNo"/>
    <result column="rgt_date" property="rgtDate"/>
    <result column="unrgt_date" property="unrgtDate"/>
    <result column="unrgt_yn" property="unrgtYn"/>
    <result column="pwd" property="pwd"/>
    <result column="user_img" property="userImg"/>
    <result column="user_type" property="userType"/>
  </resultMap>

  <!-- 
    id => 인터페이스의 메서드 이름과 일치해야 한다.
   -->
  <select id="findAll" resultMap="userMap">
    select
      user_id,
      email,
      name,
      phone_no,
      rgt_date,
      unrgt_yn,
      pwd,
      user_img,
      user_type 
    from 
      user 
    order by 
      user_id asc
  </select>
  
    <select id="findByNo" resultMap="userMap" parameterType="int">
	  select
	    board_no,
	    title,
	    content,
	    created_date,
	    view_count
	  from
	    ml_board
	  where
	    board_no=#{no}
  </select>
  
  <insert id="insert" parameterType="User">
    insert into ml_board(title,content)
    values(#{title},#{content})
  </insert>
  
  <update id="update" parameterType="User">
    update ml_board set 
      title=#{title},
      content=#{content} 
    where 
      board_no=#{no}
  </update>
  
  <select id="countAll" resultType="int">
    select count(*) from ml_board
  </select>
  
  <delete id="delete" parameterType="int">
    delete from ml_board
    where board_no=#{no}
  </delete>
  
  <update id="increaseViewCount" parameterType="int">
    update ml_board set
      view_count=view_count + 1 
    where board_no=#{no}
  </update>
  
</mapper>