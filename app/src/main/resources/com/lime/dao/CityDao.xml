<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lime.dao.CityDao">

    <resultMap type="City" id="cityMap">
        <id column="city_id" property="cityId"/>
        <result column="city_name" property="cityName"/>
        <result column="lat" property="cityLat"/>
        <result column="lng" property="cityLng"/>
        <association property="region" javaType="region">
            <id column="region_id" property="regionId"/>
            <result column="region_name" property="regionName"/>
            <result column="lat" property="reigonLat"/>
            <result column="lng" property="regionLng"/>
        </association>
    </resultMap>

    <select id="findCityLatlng" resultMap="cityMap" parameterType="int">
        SELECT
            c.city_id,
            c.lat cityLat,
            c.lng cityLng,
            c.city_name,
            r.region_name
        from city c
                 left join region r on c.region_id=r.region_id
        where c.city_id=#{cityId};
    </select>

    <select id="findRegionLatlng" resultMap="cityMap" parameterType="int">
        SELECT
            region_id,
            lat regionLat,
            lng regionLng,
            region_name
        from region
        where region_id=#{regionId};
    </select>






</mapper>