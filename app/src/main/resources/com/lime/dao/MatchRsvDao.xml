<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.lime.dao.MatchRsvDao">

  <resultMap type="matchRsv" id="matchRsvMap">
    <id column="mtch_id" property="matchId"/>
    <id column="user_id" property="userId"/>
    <!-- <id column="{mtchId=mtch_id,userId=user_id}"/> -->
    <result column="lime_id" property="limeId"/>
    <result column="state" property="state"/>
    <!--  
    <association property="match" javaType="Match">
      <id column="mtch_id" property="matchId"/>
      <result column="mtch_date" property="matchDate"/>
      <result column="st_time" property="startTime"/>
      <result column="state" property="state"/>
    </association>
    -->
    
  </resultMap>

  <select id="countAll" resultType="int">
    select count(*) from social_mtch_rsv
  </select>
  
  <select id="findAll" resultMap="matchRsvMap">
    select 
      mtch_id,
      user_id,
      lime_id,
      state
    from 
      social_mtch_rsv
    order by 
      mtch_id asc
  </select>
  


  <insert id="insert" parameterType="matchRsv">
    insert into social_mtch_rsv(mtch_id,user_id,lime_id,state)
    values(#{matchId},#{userId},#{limeId},#{state})
  </insert>




  
</mapper>